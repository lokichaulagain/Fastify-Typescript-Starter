{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    // "baseUrl": "src",
    // "paths": {
    //   "config/*": [
    //     "config/*"
    //   ]
    // }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/@sinclair/typebox"
  ]
}